<!DOCTYPE html>
<html>
<head>
  <title>FoodTruck</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700italic' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="row" id="transparent">
  <div class="large-12 columns">

  <div class="row">
    <div class="large-3 columns">
      <div class="boston_roots">
        boston. roots.
      </div>
        <div class="logo">
          <%= link_to image_tag("boston_roots.jpg"), root_path %>
        </div>
    </div>
    <div class="large-9 columns">
      <ul class="right button-group">

        <li><%= link_to 'Home', root_path, class: "button" %></li>
        <li><%= link_to 'Vendors', vendors_path, class: "button" %></li>

        <%- if current_user -%>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "button" %></li>
        <li><%= link_to 'Edit Profile', edit_user_registration_path, class: "button" %></li>

        <%- else -%>
        <li><%= link_to 'Sign Up', new_user_registration_path, class: "button" %></li>
        <li><%= link_to 'Sign In', new_user_session_path, class: "button" %></li>
        <%- end -%>

      </ul>
    </div>
  </div>



  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>

  <footer class="row" id="footer_margin">
    <div class="large-12 columns">
      <hr/>
      <div class="row">
        <div class="large-12 columns">
          Â© Team Awesome ||
          <%= link_to 'paul thiebauth', "https://github.com/paulmthiebauth", :target => "_blank" %> ||
          <%= link_to 'erica manoppo', "https://github.com/emanoppo", :target => "_blank" %> ||
          <%= link_to 'meredith fuhrman', "https://github.com/meredithfuhrman", :target => "_blank" %> ||
          <%= link_to 'jordan williams', "https://github.com/iEv0lv3", :target => "_blank" %>
        </div>
      </div>
    </div>
  </footer>

  </div>
</div>

</body>
</html>
